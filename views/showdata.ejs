<%- include('./partials/header.ejs') %>
<br />
<table
  id="example"
  class="table table-striped table-bordered mt-1 text-center"
  style="width: 100%;"
>
  <form action="/movies/findByUserID/?" method="GET">
    <input type="text" name="UserID" id="UserID" />
  </form>
  <thead>
    <tr>
      <th>No</th>
      <th>Movie Name</th>
      <th>Genre</th>
      <th>Years</th>
      <th>Created By</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i= 0; i < results.length; i++) { %>
    <tr>
      <td><%= i+1; %></td>
      <td><%= results[i].name %></td>
      <td><%= results[i].genre %></td>
      <td><%= results[i].year %></td>
      <td><%= results[i].UserID.fullname %></td>
      <td>
        <button
          type="button"
          class="btn btn-primary btn-md"
          data-toggle="modal"
          data-target="#edit-product"
        >
          <i class="fa fa-pencil-square-o"></i> Edit
        </button>

        <button
          type="button"
          class="btn btn-danger btn-md"
          data-toggle="modal"
          data-target="#delete"
        >
          <i class="fa fa-minus-circle"></i> Delete
        </button>
      </td>
    </tr>
    <% } %>
